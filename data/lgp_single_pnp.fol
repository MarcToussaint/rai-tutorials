## basic predicates
is_gripper
is_object
is_place
is_pose
is_box
is_sphere
is_capsule

## predicates to help formulating rules
on
busy

## initial state (generated by the code from config file)
START_STATE {}

#####################################################################

DecisionRule pick {
  Obj, From, Hand, 
  pre: { (is_gripper Hand) (is_object Obj) (on From Obj) (busy Hand)! }
  eff: { (on From Obj)! #deletes
    (on Hand Obj) (busy Hand) #adds
    }
}

#####################################################################

DecisionRule place {
  Obj, Hand, To,
  pre: { (is_gripper Hand) (is_object Obj) (is_place To) (on Hand Obj) }
  eff: { (busy Hand)! (on Hand Obj)! #deletes
    (on To Obj) #adds
    }
}
